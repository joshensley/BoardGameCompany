@page "{id}"
@model BoardGameCompany.Pages.InventoryItems.DeleteModel
@{
    ViewData["Title"] = "Delete Inventory Item";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Delete Inventory Item</h2>
    </div>
</div>
<br />
<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InventoryItem.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InventoryItem.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InventoryItem.BoardGame.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InventoryItem.BoardGame.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InventoryItem.InStock)
        </dt>
        <dd class="col-sm-10">
            @(Model.InventoryItem.InStock ? "Yes" : "No" )
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InventoryItem.Condition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InventoryItem.Condition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InventoryItem.ReceivedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InventoryItem.ReceivedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InventoryItem.ShippedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InventoryItem.ShippedDate)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="InventoryItem.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
