@page "{id}"
@model BoardGameCompany.Pages.InventoryItems.DetailsModel
@{
    ViewData["Title"] = "Inventory Items Details";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Inventory Item Details</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-page="./Edit" asp-route-id="@Model.InventoryItem.ID">Edit</a>
    </div>
</div>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.InventoryItem.ID)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(m => m.InventoryItem.ID)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.InventoryItem.BoardGame.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(m => m.InventoryItem.BoardGame.Title)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.InventoryItem.Condition)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(m => m.InventoryItem.Condition)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.InventoryItem.InStock)
    </dt>
    <dd class="col-sm-10">
        @(Model.InventoryItem.InStock ? "Yes" : "No")
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.InventoryItem.ReceivedDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(m => m.InventoryItem.ReceivedDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.InventoryItem.ShippedDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(m => m.InventoryItem.ShippedDate)
    </dd>
</dl>
