@page
@model BoardGameCompany.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Edit User</h2>
    </div>
</div>
<br />

<div class="border container" style="padding:20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" value="ApplicationUser.Id" />

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ApplicationUser.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="ApplicationUser.Name" class="form-control" />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ApplicationUser.PhoneNumber"></label>
            </div>
            <div class="col-6">
                <input asp-for="ApplicationUser.PhoneNumber" class="form-control" />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ApplicationUser.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="ApplicationUser.Email" class="form-control" />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Edit" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>
</div>
