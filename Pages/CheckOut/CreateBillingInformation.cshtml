@page
@model BoardGameCompany.Pages.CheckOut.CreateBillingInformationModel
@{
    ViewData["Title"] = "Billing";
}

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="offset-3 col-6">
                <strong><label asp-for="UserBillingInformation.Name"></label></strong>
                <input asp-for="UserBillingInformation.Name" class="form-control" placeholder="First and Last Name" />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="UserBillingInformation.Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-6">
                <label asp-for="UserBillingInformation.Address1"></label>
                <input asp-for="UserBillingInformation.Address1" class="form-control" placeholder="Street address or P.O. Box" />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="UserBillingInformation.Address1" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-6">
                <label asp-for="UserBillingInformation.Address2"></label>
                <input asp-for="UserBillingInformation.Address2" class="form-control" placeholder="Apt, suite, unit, building, floor, etc." />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="UserBillingInformation.Address2" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-6">
                <label asp-for="UserBillingInformation.City"></label>
                <input asp-for="UserBillingInformation.City" class="form-control" />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="UserBillingInformation.City" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-6">
                <label asp-for="UserBillingInformation.State"></label>
                <input asp-for="UserBillingInformation.State" class="form-control" />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="UserBillingInformation.State" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-6">
                <label asp-for="UserBillingInformation.PostalCode"></label>
                <input asp-for="UserBillingInformation.PostalCode" class="form-control" />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="UserBillingInformation.PostalCode" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-6">
                <label asp-for="UserBillingInformation.Country"></label>
                <input asp-for="UserBillingInformation.Country" class="form-control" />
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="UserBillingInformation.Country" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-4">
                <input type="submit"
                       value="Submit"
                       class="btn btn-primary form-control" />
            </div>
        </div>
    </form>
</div>
