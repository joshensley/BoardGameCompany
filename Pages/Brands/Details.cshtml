@page "{id}"
@model BoardGameCompany.Pages.Brands.DetailsModel
@{
    ViewData["Title"] = "Brand Details";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Brand Details</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-page="./Index">Back to List</a>
    </div>
</div>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.Brand.BrandName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(m => m.Brand.BrandName)
    </dd>

</dl>
<hr />

@if (Model.Brand.BoardGames.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover border">
            <tr class="table-secondary">
                <th>
                    <label>Title</label>
                </th>
                <th>
                    <label>Price</label>
                </th>
                <th>
                    <label>Release Date</label>
                </th>
                <th>
                    <label>Player Number</label>
                </th>
                <th>
                    <label>In Stock</label>
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.Brand.BoardGames)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PlayerNumber)
                    </td>
                    <td>
                        @item.InventoryItems.Count
                    </td>
                    <td>
                        <button class="btn btn-success">
                            <a asp-page="/BoardGames/Edit" asp-route-id="@item.ID">
                                <i class="fas fa-edit text-white"></i>
                            </a>
                        </button>
                        <button class="btn btn-danger">
                            <a asp-page="/BoardGames/Delete" asp-route-id="@item.ID">
                                <i class="fas fa-trash text-white"></i>
                            </a>
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>

}
else
{
    <p>No board games available.</p>
}
